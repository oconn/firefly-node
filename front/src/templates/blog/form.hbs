<form action="." method="post" class="form">

    <h2 class="form-title">New Blog Post</h2>
    
    <div>
        <label for="title">Title</label>
        <input type="text" class='post-title' data-field="title" id="title" name="title" value="{{title}}" /><br>
    </div>
    
    <div>
        <label for="description">Description</label>
        <textarea name="description" data-field="description" id="description" rows="10">{{description}}</textarea><br>
    </div>    
    
    <div>
        <label for="body">Body</label>
        <textarea name="body" data-field="body" id="body" rows="20">{{body}}</textarea><br>
    </div>    

    <input type="submit" />
</form>

<button class="back">Back</button>

<div id="myModal" class="reveal-modal" data-reveal>
    <p>Are you sure you want to go back? All progress will be lost.</p>
    <button class='yes'>Yes</button>
    <button class='no'>Cancel</button> 
</div>
